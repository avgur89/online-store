<h1>Add new course</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Title</label>
    <span class="helper-text" data-error="Title field is required"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" min="1" required>
    <label for="price">Price</label>
    <span class="helper-text" data-error="Price field is required"></span>
  </div>

  <div class="input-field">
    <input id="img" name="imgUrl" type="text" class="validate" required>
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Image field is required"></span>
  </div>

  <button type="submit" class="btn btn-primary">Add</button>
</form>