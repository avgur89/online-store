<h1>Edit {{course.title}} course</h1>

<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
    <label for="title">Title</label>
    <span class="helper-text" data-error="Title field is required"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" min="1" required value="{{course.price}}">
    <label for="prive">Price</label>
    <span class="helper-text" data-error="Price field is required"></span>
  </div>

  <div class="input-field">
    <input id="img" name="imgUrl" type="text" class="validate" required value="{{course.imgUrl}}">
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Image field is required"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">
  <button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value={{course.id}}>
  <button type="submit" class="btn red">Delete course</button>
</form>